<!doctype html>
<html>
<head>
    <title>Login page</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <script src="https://kit.fontawesome.com/320d6fe4a2.js" crossorigin="anonymous"></script>
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-4 col-sm-offset-4">
    <div class="fa-3x">
        <h1><i class="fa-solid fa-lightbulb fa-beat" style="--fa-animation-duration: 2s;"></i> Welcome </h1>
    </div>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username" required="required">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required="required">
        </div>
        <button type="submit" class="btn btn-info">Login</button>
    </form>
    <hr>
    <p>Don't have an account?<br> <a href="/register">Create your account</a>, it takes less than a minute!</p>
</div>
</div>
</body>
</html>
